SELECT P.RECIPE_ID AS RECIPE, M.COMPANY AS COMPANY, group_concat(DISTINCT MA.WARE) AS MATERIALS, group_concat(DISTINCT P.WARE) AS PRODUCTS
FROM PRODUCT P
LEFT JOIN MANUFACTURER M
ON P.RECIPE_ID = M.RECIPE_ID
LEFT JOIN MATERIAL MA
ON MA.RECIPE_ID = P.RECIPE_ID
GROUP BY P.RECIPE_ID
ORDER BY COMPANY ASC