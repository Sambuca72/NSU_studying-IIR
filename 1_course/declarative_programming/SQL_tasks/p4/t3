SELECT DISTINCT CLASS, 
	(SELECT CATEGORY.WARE FROM CATEGORY, PRODUCT WHERE CATEGORY.WARE = PRODUCT.WARE AND CLASS = C.CLASS ORDER BY PRICE DESC LIMIT 1) as WARE,
	(SELECT PRICE FROM CATEGORY, PRODUCT WHERE CATEGORY.WARE = PRODUCT.WARE AND CLASS = C.CLASS ORDER BY PRICE DESC LIMIT 1) as PRICE
FROM CATEGORY C